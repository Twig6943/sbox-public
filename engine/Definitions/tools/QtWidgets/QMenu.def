	QAction activeAction();

	QAction addMenu(QMenu menu);
	QAction insertMenu(QAction before, QMenu menu);

	void setTearOffEnabled(bool b);
	bool isTearOffEnabled();

	void setToolTipsVisible(bool visible);
	bool toolTipsVisible();
}


